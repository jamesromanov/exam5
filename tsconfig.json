{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDirs": ["./src", "./", "./config"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,  
  },
  "include": ["src/**/*", "./global.d.ts", "./routes/**/*", "./"],
  "exclude": ["node_modules"] 
}